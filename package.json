{
  "name": "@softwareventures/chain",
  "version": "0.0.0-development",
  "description": "A simple identity monad to enable function chaining",
  "keywords": [
    "TypeScript",
    "chain",
    "identity",
    "monad"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/chain",
  "bugs": "https://github.com/softwareventures/chain/issues",
  "repository": "github:softwareventures/chain",
  "license": "ISC",
  "scripts": {
    "pre-commit": "precise-commits",
    "fix": "tsc --noEmit && eslint --fix . && tslint --fix --project . && prettier --write .",
    "lint": "tsc --noEmit && eslint . && tslint --project . && prettier --check .",
    "prepare": "husky install && tsc && node ./fix-types-for-back-compat.js",
    "semantic-release": "semantic-release",
    "test": "ava"
  },
  "sideEffects": false,
  "engines": {
    "node": "^12 || ^14 || >=16"
  },
  "devDependencies": {
    "@softwareventures/eslint-config": "5.1.5",
    "@softwareventures/precise-commits": "2.0.18",
    "@softwareventures/prettier-config": "3.0.0",
    "@softwareventures/semantic-release-config": "2.0.2",
    "@softwareventures/tsconfig": "5.1.1",
    "@softwareventures/tslint-rules": "1.0.0",
    "ava": "4.1.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.13.0",
    "husky": "7.0.4",
    "prettier": "2.6.2",
    "semantic-release": "17.4.7",
    "ts-node": "10.7.0",
    "tslint": "6.1.3",
    "typescript": "4.6.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@softwareventures"
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  }
}
